#include "ft_printf.h"

#ifndef PRINTF_TESTS_H

#define PRINTF_TESTS_H
#define COLOR_GREEN "\033[0;32m"
#define COLOR_RED "\033[0;31m"
#define COLOR_PURPLE "\033[0;35m"
#define COLOR_CYAN "\033[0;36m"
#define COLOR_RESET "\033[0m"

#include <stdio.h>

#endif

int	main(void)
{
	printf("%sBasic string\n", COLOR_RESET);
	printf("%s%s\n", COLOR_CYAN, "yo");
	ft_printf("%s%c\n", COLOR_PURPLE, "yo");

	printf("%s\nString with width 30 aligned to right\n", COLOR_RESET);
	printf("%s%30s%c\n", COLOR_CYAN, "yo", '|');
	ft_printf("%s%30s%c\n", COLOR_PURPLE, "yo", '|');

	printf("%s\nString with width 30 aligned to left\n", COLOR_RESET);
	printf("%s%-30s%c\n", COLOR_CYAN, "yo", '|');
	ft_printf("%s%-30s%c\n", COLOR_PURPLE, "yo", '|');

	printf("%s\nString yoyo with precision 3\n", COLOR_RESET);
	printf("%s%.3s\n", COLOR_CYAN, "yoyo");
	ft_printf("%s%.3s\n", COLOR_PURPLE, "yoyo");

	printf("%s\nString yoyo with width 30 and precision 3\n", COLOR_RESET);
	printf("%s%30.3s%c\n", COLOR_CYAN, "yoyo", '|');
	ft_printf("%s%30.3s%c\n", COLOR_PURPLE, "yoyo", '|');

	printf("%s\nString yoyo with width 30 aligned to left and precision 3\n", COLOR_RESET);
	printf("%s%-30.3s%c\n", COLOR_CYAN, "yoyo", '|');
	ft_printf("%s%-30.3s%c\n", COLOR_PURPLE, "yoyo", '|');

	printf(COLOR_RESET);
	return (0);
}
