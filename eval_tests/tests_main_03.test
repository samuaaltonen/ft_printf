#include "ft_printf.h"

#ifndef PRINTF_TESTS_H

#define PRINTF_TESTS_H
#define COLOR_GREEN "\033[0;32m"
#define COLOR_RED "\033[0;31m"
#define COLOR_PURPLE "\033[0;35m"
#define COLOR_CYAN "\033[0;36m"
#define COLOR_RESET "\033[0m"

#include <stdio.h>

int get_next_line(const int fd, char **line);

#endif

int	main(void)
{
	printf("%sDouble %lf\n", COLOR_CYAN, 123456.789123345678);
	ft_printf("%sDouble %lf\n", COLOR_PURPLE, 123456.789123345678);

	printf("\n%sLong double %Lf\n", COLOR_CYAN, (long double) 123456123456.789123345678 * (long double) 123456123456.789123345678);
	ft_printf("%sLong double %Lf\n", COLOR_PURPLE, (long double) 123456123456.789123345678 * (long double) 123456123456.789123345678);

	printf("\n%sOctal %o\n", COLOR_CYAN, 999999);
	ft_printf("%sOctal %o\n", COLOR_PURPLE, 999999);

	printf("\n%sHexadecimal %x\n", COLOR_CYAN, 16777215);
	ft_printf("%sHexadecimal %x\n", COLOR_PURPLE, 16777215);

	printf("\n%sHexadecimal %X\n", COLOR_CYAN, 16777215);
	ft_printf("%sHexadecimal %X\n", COLOR_PURPLE, 16777215);

	printf("\n%sExponential notation %e\n", COLOR_CYAN, 1000000.123);
	ft_printf("%sExponential notation %e\n", COLOR_PURPLE, 1000000.123);

	printf(COLOR_RESET);
	return (0);
}
