#include "tests.h"

int	main(void)
{
	char	*format = "";

	printf("%sFloat rounding:\n", COLOR_RESET);
	format = "%s%.2f\n";
	printf(format, COLOR_CYAN, 99.9999);
	ft_printf(format, COLOR_PURPLE, 99.9999);
	format = "%s%.3f\n";
	printf(format, COLOR_CYAN, 0.5595f);
	ft_printf(format, COLOR_PURPLE, 0.5595f);
	format = "%s%.0f\n";
	printf(format, COLOR_CYAN, 0.5);
	ft_printf(format, COLOR_PURPLE, 0.5f);
	format = "%s%.0f\n";
	printf(format, COLOR_CYAN, 2.5);
	ft_printf(format, COLOR_PURPLE, 2.5f);
	format = "%s%.0f\n";
	printf(format, COLOR_CYAN, 3.5);
	ft_printf(format, COLOR_PURPLE, 3.5f);
	format = "%s%.12f\n";
	printf(format, COLOR_CYAN, 0.5595f);
	ft_printf(format, COLOR_PURPLE, 0.5595f);
	format = "%s%.10f\n";
	printf(format, COLOR_CYAN, 99999.999999);
	ft_printf(format, COLOR_PURPLE, 99999.999999);

	printf("%s\nDouble %lf\n", COLOR_CYAN, 123456.789123345678);
	ft_printf("%sDouble %lf\n", COLOR_PURPLE, 123456.789123345678);

	printf("\n%sLong double %Lf\n", COLOR_CYAN, (long double) 123456123.789123345678 * (long double) 123456123.789123345678);
	ft_printf("%sLong double %Lf\n", COLOR_PURPLE, (long double) 123456123.789123345678 * (long double) 123456123.789123345678);

	printf("\n%sOctal %o\n", COLOR_CYAN, 999999);
	ft_printf("%sOctal %o\n", COLOR_PURPLE, 999999);

	printf("\n%sHexadecimal %x\n", COLOR_CYAN, 16777215);
	ft_printf("%sHexadecimal %x\n", COLOR_PURPLE, 16777215);

	printf("\n%sHexadecimal %X\n", COLOR_CYAN, 16777215);
	ft_printf("%sHexadecimal %X\n", COLOR_PURPLE, 16777215);

	printf("\n%sHexadecimal with negative value:\n", COLOR_RESET);
	format = "%s%x\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);
	format = "%s%hhx\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);
	format = "%s%hx\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);
	format = "%s%lx\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);
	format = "%s%llx\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);

	printf("\n%sOctal with negative value:\n", COLOR_RESET);
	format = "%s%x\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);
	format = "%s%hhx\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);
	format = "%s%hx\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);
	format = "%s%lx\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);
	format = "%s%llx\n";
	printf(format, COLOR_CYAN, -5);
	ft_printf(format, COLOR_PURPLE, -5);

	printf("\n%sBONUS:%s\nExponential notation %e\n", COLOR_GREEN, COLOR_CYAN, 1000000.123);
	ft_printf("%sExponential notation %e\n", COLOR_PURPLE, 1000000.123);

	printf(COLOR_RESET);
	return (0);
}
