#include "tests.h"

int	main(void)
{
	printf("%sDouble %lf\n", COLOR_CYAN, 123456.789123345678);
	ft_printf("%sDouble %lf\n", COLOR_PURPLE, 123456.789123345678);

	printf("\n%sLong double %Lf\n", COLOR_CYAN, (long double) 123456123.789123345678 * (long double) 123456123.789123345678);
	ft_printf("%sLong double %Lf\n", COLOR_PURPLE, (long double) 123456123.789123345678 * (long double) 123456123.789123345678);

	printf("\n%sOctal %o\n", COLOR_CYAN, 999999);
	ft_printf("%sOctal %o\n", COLOR_PURPLE, 999999);

	printf("\n%sHexadecimal %x\n", COLOR_CYAN, 16777215);
	ft_printf("%sHexadecimal %x\n", COLOR_PURPLE, 16777215);

	printf("\n%sHexadecimal %X\n", COLOR_CYAN, 16777215);
	ft_printf("%sHexadecimal %X\n", COLOR_PURPLE, 16777215);

	printf("\n%sOverflows with octal (lengths hh, h, l, ll):\n", COLOR_RESET);
	char	*format = "%s%hho\n";
	printf(format, COLOR_CYAN, 277);
	ft_printf(format, COLOR_PURPLE, 277);
	format = "%s%ho\n";
	printf(format, COLOR_CYAN, 69420);
	ft_printf(format, COLOR_PURPLE, 69420);
	format = "%s%lo\n";
	printf(format, COLOR_CYAN, __LONG_LONG_MAX__);
	ft_printf(format, COLOR_PURPLE, __LONG_LONG_MAX__);
	format = "%s%llo\n";
	int	trick_compiler = 2;
	printf(format, COLOR_CYAN, __LONG_LONG_MAX__ * trick_compiler);
	ft_printf(format, COLOR_PURPLE, __LONG_LONG_MAX__ * trick_compiler);
	printf(format, COLOR_CYAN, - __LONG_LONG_MAX__ * trick_compiler);
	ft_printf(format, COLOR_PURPLE, - __LONG_LONG_MAX__ * trick_compiler);
	printf(format, COLOR_CYAN, -2);
	ft_printf(format, COLOR_PURPLE, -2);

	printf("\n%sOverflows with hexadecimal (lengths hh, h, l, ll):\n", COLOR_RESET);
	format = "%s%hhX\n";
	printf(format, COLOR_CYAN, 277);
	ft_printf(format, COLOR_PURPLE, 277);
	format = "%s%hX\n";
	printf(format, COLOR_CYAN, 69420);
	ft_printf(format, COLOR_PURPLE, 69420);
	format = "%s%lX\n";
	printf(format, COLOR_CYAN, __LONG_LONG_MAX__);
	ft_printf(format, COLOR_PURPLE, __LONG_LONG_MAX__);
	format = "%s%llX\n";
	printf(format, COLOR_CYAN, __LONG_LONG_MAX__ * trick_compiler);
	ft_printf(format, COLOR_PURPLE, __LONG_LONG_MAX__ * trick_compiler);
	printf(format, COLOR_CYAN, -2);
	ft_printf(format, COLOR_PURPLE, -2);
	printf(format, COLOR_CYAN, 2);
	ft_printf(format, COLOR_PURPLE, 2);

	printf("\n%sBONUS:%s\nExponential notation %e\n", COLOR_GREEN, COLOR_CYAN, 1000000.123);
	ft_printf("%sExponential notation %e\n", COLOR_PURPLE, 1000000.123);

	printf(COLOR_RESET);
	return (0);
}
