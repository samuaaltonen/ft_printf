#include "tests.test"

int	main(void)
{
	char	*format = "";
	int		nbr = 0;
	int		nbr2 = 0;

	printf("%sPrint nothing but save number of printed characters to nbr %n\n", COLOR_CYAN, &nbr);
	printf("nbr: %d\n", nbr);
	ft_printf("%sPrint nothing but save number of printed characters to nbr %n\n", COLOR_PURPLE, &nbr2);
	ft_printf("nbr: %d\n", nbr2);

	printf("\n%sExponential notation%s\n", COLOR_GREEN, COLOR_RESET);
	format = "%s%e\n";
	printf(format, COLOR_CYAN, 1000000.123);
	ft_printf(format, COLOR_PURPLE, 1000000.123);

	printf("\n%sBinary simple%s\n", COLOR_GREEN, COLOR_RESET);
	ft_printf("%s%b%c\n", COLOR_PURPLE, 1, '|');
	ft_printf("%s%b%c\n", COLOR_PURPLE, -1, '|');
	ft_printf("%s%b%c\n", COLOR_PURPLE, 16777215, '|');
	ft_printf("%s%b%c\n", COLOR_PURPLE, 44739242, '|');

	printf("\n%sBinary with flags%s\n", COLOR_GREEN, COLOR_RESET);
	ft_printf("%s%b%c\n", COLOR_PURPLE, 1, '|');
	ft_printf("%s%-10b%c\n", COLOR_PURPLE, 1, '|');
	ft_printf("%s%.10b%c\n", COLOR_PURPLE, 1, '|');
	ft_printf("%s%-#010.5b%c\n", COLOR_PURPLE, 1, '|');

	printf("%s\nStar (*) for width and precision:\n", COLOR_GREEN);
	format = "%s%c%*15d%c\n";
	printf(format, COLOR_CYAN, '|', 3, 12, '|');
	ft_printf(format, COLOR_PURPLE, '|', 3, 12, '|');
	format = "%s%c%*15d%c\n";
	printf(format, COLOR_CYAN, '|', 0, 12, '|');
	ft_printf(format, COLOR_PURPLE, '|', 0, 12, '|');
	format = "%s%c%15*d%c\n";
	printf(format, COLOR_CYAN, '|', 12, 123456, '|');
	ft_printf(format, COLOR_PURPLE, '|', 12, 123456, '|');
	format = "%s%c%*d%c\n";
	printf(format, COLOR_CYAN, '|', -12, 123456, '|');
	ft_printf(format, COLOR_PURPLE, '|', -12, 123456, '|');
	format = "%s%c%*d%c\n";
	printf(format, COLOR_CYAN, '|', 12, 123456, '|');
	ft_printf(format, COLOR_PURPLE, '|', 12, 123456, '|');
	format = "%s%c%*.*d%c\n";
	printf(format, COLOR_CYAN, '|', 12, 12, 123456, '|');
	ft_printf(format, COLOR_PURPLE, '|', 12, 12, 123456, '|');
	format = "%s%c%.*d%c\n";
	printf(format, COLOR_CYAN, '|', 12, 123456, '|');
	ft_printf(format, COLOR_PURPLE, '|', 12, 123456, '|');
	format = "%s%c%20.20*d%c\n";
	printf(format, COLOR_CYAN, '|', 12, 123456, '|');
	ft_printf(format, COLOR_PURPLE, '|', 12, 123456, '|');
	format = "%s%c%-*d%c\n";
	printf(format, COLOR_CYAN, '|', -12, 123456, '|');
	ft_printf(format, COLOR_PURPLE, '|', -12, 123456, '|');
	format = "%s%c%0*d%c\n";
	printf(format, COLOR_CYAN, '|', -12, 123456, '|');
	ft_printf(format, COLOR_PURPLE, '|', -12, 123456, '|');

	printf(COLOR_RESET);
	return (0);
}
