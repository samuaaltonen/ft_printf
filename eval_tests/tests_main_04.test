#include "tests.h"

int	main(void)
{
	char	*format;
	void	*something;
	void	*ptr;
	int		nbr;
	int		nbr2;

	something = "asd";
	ptr = NULL;
	nbr = 0;
	nbr2 = 0;
	printf("%sPointer to something %p\n", COLOR_CYAN, something);
	ft_printf("%sPointer to something %p\n", COLOR_PURPLE, something);

	printf("\n%sPointer to NULL %p\n", COLOR_CYAN, ptr);
	ft_printf("%sPointer to NULL %p\n", COLOR_PURPLE, ptr);

	printf("\n%sPointer with precision:\n", COLOR_RESET);
	format = "%s%.0p\n";
	printf(format, COLOR_CYAN, something);
	ft_printf(format, COLOR_PURPLE, something);
	format = "%s%.5p\n";
	printf(format, COLOR_CYAN, something);
	ft_printf(format, COLOR_PURPLE, something);
	format = "%s%.0p\n";
	printf(format, COLOR_CYAN, ptr);
	ft_printf(format, COLOR_PURPLE, ptr);
	format = "%s%.5p\n";
	printf(format, COLOR_CYAN, ptr);
	ft_printf(format, COLOR_PURPLE, ptr);
	format = "%s%15.15p\n";
	printf(format, COLOR_CYAN, ptr);
	ft_printf(format, COLOR_PURPLE, ptr);
	format = "%s%15.15p\n";
	printf(format, COLOR_CYAN, something);
	ft_printf(format, COLOR_PURPLE, something);

	printf("\n%sPointer with width\n", COLOR_RESET);
	printf("%s%20p%c\n", COLOR_CYAN, something, '|');
	ft_printf("%s%20p%c\n", COLOR_PURPLE, something, '|');
	printf("%s%-20p%c\n", COLOR_CYAN, something, '|');
	ft_printf("%s%-20p%c\n", COLOR_PURPLE, something, '|');
	printf("%s%3p%c\n", COLOR_CYAN, something, '|');
	ft_printf("%s%3p%c\n", COLOR_PURPLE, something, '|');

	printf("\n%sPrint nothing but save number of printed characters to nbr %n\n", COLOR_CYAN, &nbr);
	printf("nbr: %d\n", nbr);
	ft_printf("%sPrint nothing but save number of printed characters to nbr %n\n", COLOR_PURPLE, &nbr2);
	ft_printf("nbr: %d\n", nbr2);

	printf("\n%s%% conversion:\n", COLOR_RESET);
	format = "%s%%%%%%%%%%%%\n";
	printf(format, COLOR_CYAN);
	ft_printf(format, COLOR_PURPLE);
	format = "%s%4%%c\n";
	printf(format, COLOR_CYAN, '|');
	ft_printf(format, COLOR_PURPLE, '|');
	format = "%s%4.4%%c\n";
	printf(format, COLOR_CYAN, '|');
	ft_printf(format, COLOR_PURPLE, '|');
	format = "%s%-4.4%%c\n";
	printf(format, COLOR_CYAN, '|');
	ft_printf(format, COLOR_PURPLE, '|');
	format = "%s%05%%c\n";
	printf(format, COLOR_CYAN, '|');
	ft_printf(format, COLOR_PURPLE, '|');
	format = "%s%0-5%%c\n";
	printf(format, COLOR_CYAN, '|');
	ft_printf(format, COLOR_PURPLE, '|');
	format = "%s%05.10%%c\n";
	printf(format, COLOR_CYAN, '|');
	ft_printf(format, COLOR_PURPLE, '|');

	printf("\n%sReturn values:\n", COLOR_RESET);
	printf(" %sRETURNED: %i\n", COLOR_RESET, printf("%syoyoyo", COLOR_CYAN));
	printf(" %sRETURNED: %i\n", COLOR_RESET, ft_printf("%syoyoyo", COLOR_PURPLE));

	printf(COLOR_RESET);
	return (0);
}
