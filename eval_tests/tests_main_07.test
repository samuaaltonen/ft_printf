#include "tests.h"

int	main(void)
{
	int		i = 0;
	time_t	end_loop;
	time_t	start_loop = time(NULL);

	end_loop = start_loop + (time_t) 20;

	while (start_loop < end_loop)
	{
		start_loop = time(NULL);
		ft_printf("\r%sTotal calls: %s%d", COLOR_RESET, COLOR_GREEN, i);
		i++;
	}
	printf("\n");
	printf(COLOR_RESET);
	return (0);
}
